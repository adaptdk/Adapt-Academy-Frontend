{
  "env": {
    "browser": true,
    "commonjs": true,
    "es6": true
  },
  "extends": "eslint:recommended",
  "parserOptions": {
    "ecmaFeatures": {
      "jsx": true
    },
    "ecmaVersion": 2017,
    "sourceType": "module"
  },
  "rules": {
    "no-var": 2,
    "no-console": 1,
    "no-multi-spaces": 1,
    "no-multiple-empty-lines": 1,
    "no-const-assign": 2,
    "eol-last": 2,
    "eqeqeq": 1,
    "no-unneeded-ternary": 1,
    "max-len": [
      1,
      {
        "code": 80
      }
    ],
    "max-depth": [
      "error",
      2
    ],
    "indent": [
      "error",
      "tab"
    ],
    "linebreak-style": [
      "error",
      "unix"
    ],
    "quotes": [
      "error",
      "single"
    ],
    "semi": [
      "error",
      "always"
    ]
  }
}
